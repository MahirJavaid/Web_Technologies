                    <a href="#basketball" class="category">Basketball</a>
                    <a href="#volleyball" class="category">Volleyball</a>
                </p>
            </div>
            <div class="products">
                <% for( let i = 0; i < products.length; i++ ) { %>
                    <div class="card">
                        <img src= "<%= products[i].image %>" alt="Product Image" class="product-img">
                        <h3><%= products[i].name %></h3>
                        <p><%= products[i].price %></p>
                        <button class="mybtn"><a class="btn-link" href="/add-to-cart/<%= products[i].id %>">Add to Cart</a></button>
                    </div>
                <% } %>
            </div>
        </div>
    </section>
