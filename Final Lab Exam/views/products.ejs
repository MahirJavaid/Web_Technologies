        <button class="mybtn"><a href="#" id="back-to-top">Back To Top</a></button>
    </div>
    <section id="full-products" class="first-section">
        <div class="container">
            <div class="title">
                <h1>All Products</h1>
                <p>
                    Categories: 
                    <a href="#cricket" class="category">Cricket</a>
                    <a href="#football" class="category">Football</a>
                    <a href="#tennis" class="category">Tennis</a>
